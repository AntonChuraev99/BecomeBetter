<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

<androidx.appcompat.widget.LinearLayoutCompat
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/black_background"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true"
        android:layout_weight="1"
        >

        <LinearLayout
            android:id="@+id/llCreate"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="30dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/create_name"
                android:textSize="18sp"

                />

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edName"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/shape_rectangle_r_8"
                android:hint="@string/name"
                android:inputType="text"
                android:maxLength="50"
                android:paddingStart="16dp"
                android:textColor="@color/black"
                android:textColorHint="@color/с717685"
                android:translationY="3dp" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:text="@string/select_date"
                android:textSize="18sp" />

            <com.antonchuraev.becomebetter.views.utils.TimeSelectorView
                android:id="@+id/durationTimeSelector"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:type="duration">

            </com.antonchuraev.becomebetter.views.utils.TimeSelectorView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:text="@string/set_description"
                android:textSize="18sp" />

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/shape_rectangle_r_8"
                android:gravity="start"
                android:hint="@string/description"
                android:inputType="textMultiLine"
                android:maxLength="300"
                android:padding="16dp"
                android:textColor="@color/black"
                android:textColorHint="@color/с717685"
                android:translationY="3dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:text="@string/set_priority"
                android:textSize="18sp" />

            <com.antonchuraev.becomebetter.views.utils.TimeSelectorView
                android:id="@+id/priorityTimeSelector"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:type="priority">

            </com.antonchuraev.becomebetter.views.utils.TimeSelectorView>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:text="@string/select_progress_type"
                android:textSize="18sp" />
            <Spinner
                android:id="@+id/progressTypeSelector"
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:textSize="14sp"
                android:layout_marginTop="10dp"
                android:entries="@array/progress_type"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@string/set_current_progress"
                android:textSize="18sp"
                />

            <com.antonchuraev.becomebetter.views.utils.TimeSelectorView
                android:id="@+id/progressSelector"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:type="progress">

            </com.antonchuraev.becomebetter.views.utils.TimeSelectorView>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/progressDaysSelector"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                tools:visibility="visible"
                android:layout_marginTop="10dp">

                <Button
                    android:id="@+id/btMinusDays"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bottom_bar_add_goal"/>

                <TextView
                    android:id="@+id/tvDaysCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="0 "
                    android:layout_gravity="center"
                    android:gravity="end"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/days_"
                    android:layout_marginLeft="4dp"
                    android:layout_gravity="center"
                    android:gravity="start"
                    />

                <Button
                    android:id="@+id/btIncreaseDays"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bottom_bar_add_goal" />
            </androidx.appcompat.widget.LinearLayoutCompat>

        </LinearLayout>
    </ScrollView>

    <com.antonchuraev.becomebetter.views.utils.ButtonView
        android:id="@+id/btCreate"
        android:layout_width="match_parent"
        android:layout_gravity="bottom"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:text="@string/create"
        />

    <com.antonchuraev.becomebetter.views.utils.ButtonView
        android:id="@+id/btDelete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginHorizontal="15dp"
        android:layout_marginBottom="15dp"
        android:visibility="gone"
        app:buttonType="delete"
        tools:visibility="visible" />

</androidx.appcompat.widget.LinearLayoutCompat>

</layout>