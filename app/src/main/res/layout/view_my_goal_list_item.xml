<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white"

        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingHorizontal="5dp"
            >

            <TextView
                android:id="@+id/tvName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/black"
                android:textSize="25sp"

                tools:text="tvName" />

            <ImageView
                android:id="@+id/ivDelete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_close"
                android:layout_gravity="center"
                app:tint="@color/black" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingHorizontal="5dp">

                <TextView
                    android:id="@+id/tvCurrentProgress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="35sp"
                    tools:text="35" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="/"
                    android:textColor="@color/black"
                    android:textSize="55sp" />

                <TextView
                    android:id="@+id/tvMaxProgress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="55sp"
                    tools:text="365" />

                <TextView
                    android:id="@+id/tvProjectDays"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="set in view"
                    android:textColor="@color/black"
                    android:textSize="35sp"
                    android:visibility="gone"
                    tools:visibility="visible" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btProjectAddDay"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/ic_add"
                    android:backgroundTint="@color/black"
                    android:layout_gravity="center"
                    android:layout_marginTop="12dp"
                    android:visibility="gone"
                    tools:visibility="visible" />

            </LinearLayout>

            <ProgressBar
                android:id="@+id/progressBar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="350dp"

                android:layout_height="20dp"
                android:background="@color/white"
                android:paddingHorizontal="5dp"
                android:progressDrawable="@drawable/progress"
                tools:progress="55" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/llProjectOutput"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="gone"
            tools:visibility="visible">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:paddingHorizontal="5dp">

                <TextView
                    android:id="@+id/tvProjectCurrentProgress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="35sp"
                    android:text="0" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="/"
                    android:textColor="@color/black"
                    android:textSize="55sp" />

                <TextView
                    android:id="@+id/tvProjectMaxProgress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="55sp"
                    android:text="100%" />
            </LinearLayout>

            <ProgressBar
                android:id="@+id/projectProgressBar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="350dp"

                android:layout_height="20dp"
                android:background="@color/white"
                android:paddingHorizontal="5dp"
                android:progressDrawable="@drawable/progress"
                tools:progress="55" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/llMotivationInput"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:visibility="gone"
            tools:visibility="visible">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btRestart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/black"
                android:gravity="center_vertical"
                android:paddingLeft="5dp"

                android:text="@string/repeat"
                android:textColor="@color/white"

                android:foreground="?android:attr/selectableItemBackground"

                />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btAddDay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/shape_square_stroke_black"

                android:gravity="center_vertical"
                android:paddingLeft="5dp"

                android:text="@string/plus_one_day"
                android:textColor="@color/black"
                android:foreground="?android:attr/selectableItemBackground"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llMoneyInput"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:visibility="gone"
            tools:visibility="visible">

            <EditText
                android:id="@+id/edCountToAdd"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/shape_square_stroke_black"
                android:paddingHorizontal="5dp"
                android:maxLength="10"
                android:gravity="center_vertical"
                android:inputType="number"


                android:textColor="@color/black" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btAddCustomProgress"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@color/black"
                android:gravity="center_vertical"
                android:paddingLeft="5dp"

                android:foreground="?android:attr/selectableItemBackground"
                android:text="@string/add"
                android:textColor="@color/white"

                />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/llProjectInput"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:visibility="gone"
            tools:visibility="visible">

            <EditText
                android:id="@+id/edProcentsToAdd"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/shape_square_stroke_black"
                android:paddingHorizontal="5dp"
                android:gravity="center_vertical"
                android:inputType="number"
                android:textColor="@color/black"
                android:maxLength="5"
                android:hint="_%"
                android:textColorHint="@color/black"
                />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btAddProcentsProgress"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:paddingStart="10dp"
                android:background="@color/black"
                android:gravity="center_vertical"
                android:text="@string/increase_progress"
                android:textColor="@color/white"
                android:foreground="?android:attr/selectableItemBackground"
                />


        </LinearLayout>


    </androidx.appcompat.widget.LinearLayoutCompat>

</layout>